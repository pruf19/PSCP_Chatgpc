    <script>
        const buttons = document.querySelectorAll('.play-button'); // เลือกปุ่มทั้งหมด
    
        buttons.forEach(button => {
            let isActive = false; // สถานะของปุ่ม
    
            button.addEventListener('click', () => {
                isActive = !isActive; // สลับสถานะเมื่อกดปุ่ม
                if (isActive) {
                    button.classList.add('active'); // เพิ่มคลาสเพื่อเปลี่ยนสีและแสดงติ๊กถูก
                } else {
                    button.classList.remove('active'); // เอาคลาสออกเพื่อคืนค่ากลับ
                }
            });
        });
    </script>
